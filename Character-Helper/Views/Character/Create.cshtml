@model CharacterCreationViewModel
@{
    
}
<h1>Create Character</h1>

<hr />

<div class="row">
    <div class="col">

        <div class="card">
            <div class="card-header">
                <h5>Create a new Character</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Character" asp-action="CreateCharacter" method="post">
                    <div class="mb-3">
                        <label class="form-label">Character Name</label>
                        <input asp-for="Character.Name" type="text" class="form-control" required/>
                    </div>
                    <div class="mb-3">  
                        <label class="form-label">Player</label>
                        <select class="form-control" asp-for="Character.PlayerId">
                            @foreach (var player in Model.Players)
                            {
                                <option value="@player.Id">@player.Name</option>
                            }
                        </select>
                    </div>
                    <!--<div class="mb-3">
                        <label class="form-label">Player Name</label>
                        <input asp-for="Player" type="text" class="form-control" />
                    </div>-->
                    <div class="mb-3">
                        <label class="form-label">Class</label>
                        <input asp-for="Character.Class" type="text" class="form-control" required/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Level</label>
                        <input asp-for="Character.Level" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Strength</label>
                        <input asp-for="Character.Strength" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Dexterity</label>
                        <input asp-for="Character.Dexterity" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Constitution</label>
                        <input asp-for="Character.Constitution" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Intelligence</label>
                        <input asp-for="Character.Intelligence" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Wisdom</label>
                        <input asp-for="Character.Wisdom" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Charisma</label>
                        <input asp-for="Character.Charisma" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>